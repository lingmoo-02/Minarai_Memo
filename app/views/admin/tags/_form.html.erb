<%= form_with(model: [:admin, tag], local: true) do |form| %>
  <% if tag.errors.any? %>
    <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <h2 class="font-bold mb-2"><%= tag.errors.count %> 件のエラーがあります：</h2>
      <ul class="list-disc list-inside text-sm">
        <% tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- タグ名 -->
  <div class="mb-4">
    <%= form.label :name, "タグ名", class: "block text-gray-700 font-semibold mb-1" %>
    <%= form.text_field :name, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <!-- 送信ボタン -->
  <div class="text-center">
    <%= form.submit tag.persisted? ? "更新する" : "タグを作成", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "戻る", admin_tags_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded shadow" %>
  </div>
<% end %>
