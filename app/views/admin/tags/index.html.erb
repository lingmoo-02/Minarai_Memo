<div class="max-w-4xl mx-auto px-4 py-8">
  <% if flash[:notice] %>
    <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded"><%= notice %></div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">タグ管理</h1>
    <%= link_to "新しいタグを作成", new_admin_tag_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @tags.present? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">タグ名</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ノート数</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">作成日時</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @tags.each do |tag| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-block bg-blue-100 text-blue-700 text-sm px-3 py-1 rounded">
                  <%= tag.name %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= tag.notes.count %>件
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= l tag.created_at, format: :short %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "編集", edit_admin_tag_path(tag), class: "text-blue-600 hover:text-blue-900 mr-4" %>
                <%= button_to "削除", admin_tag_path(tag), method: :delete,
                      data: { turbo_confirm: "本当に削除してもよろしいですか？" },
                      class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-center text-gray-500 py-8">タグがまだありません</p>
  <% end %>
</div>
