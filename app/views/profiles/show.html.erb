<div class="min-h-screen bg-blue-50 py-10 px-5">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
    
    <!-- 左カラム: プロフィール情報 -->
    <div class="card bg-white shadow-xl rounded-2xl p-8 space-y-6">
      <!-- アバター -->
      <div class="flex flex-col items-center">
        <%= image_tag "default_avatar.jpg", class: "w-24 h-24 rounded-full shadow-lg border-4 border-blue-100" %>
        <h2 class="mt-4 text-2xl font-bold text-blue-700"><%= current_user.name %></h2>
      </div>

      <!-- アカウント作成からの経過年月 -->
      <div class="bg-blue-50 p-4 rounded-xl shadow-sm text-center">
        <p class="text-sm text-gray-600">アカウント作成から</p>
        <p class="text-xl font-semibold text-blue-600">
          <!-- 後でhelperを作って「◯年◯ヶ月」形式にすると良い -->
          <%= time_ago_in_words(current_user.created_at) %> 前
        </p>
      </div>

      <!-- ノート数 -->
      <div class="bg-blue-50 p-4 rounded-xl shadow-sm text-center">
        <p class="text-sm text-gray-600">作成したノート数</p>
        <p class="text-3xl font-bold text-blue-500">
          <%= current_user.notes.count %>
        </p>
      </div>

      <!-- 編集ボタン -->
      <div class="text-center">
        <%= link_to "プロフィールを編集", edit_profile_path,
          class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-full shadow-lg transition ease-in-out duration-300 hover:scale-105" %>
      </div>
    </div>

    <!-- 右カラム: グラフエリア -->
    <div class="card bg-white shadow-xl rounded-2xl p-8 animate-fade-in">
      <h2 class="text-xl font-bold text-blue-700 mb-6">ノート作成の推移</h2>
      <!-- グラフを表示するdiv -->
      <canvas 
       data-controller="notes-chart"
       data-labels="<% @notes_count_by_day.keys.to_json %>"
       data-data="<% @notes_count_by_day.values.to_json %>"
       class="w-full h-64">
      </canvas>
    </div>
  </div>
</div>
