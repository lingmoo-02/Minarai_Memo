<div class="min-h-screen bg-blue-50 py-10 px-5">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
    
    <!-- 左カラム: プロフィール情報 -->
    <div class="card bg-white shadow-xl rounded-2xl p-8 space-y-6">
      <!-- アバター -->
      <div class="flex flex-col items-center">
        <%= image_tag "default_avatar.jpg", class: "w-24 h-24 rounded-full shadow-lg border-4 border-blue-100" %>
        <h2 class="mt-4 text-2xl font-bold text-blue-700"><%= current_user.name %></h2>
      </div>

      <!-- アカウント作成からの経過年月 -->
      <div class="bg-blue-50 p-4 rounded-xl shadow-sm text-center">
        <p class="text-sm text-gray-600">アカウント作成から</p>
        <p class="text-xl font-semibold text-blue-600">
          <!-- 後でhelperを作って「◯年◯ヶ月」形式にすると良い -->
          <%= time_ago_in_words(current_user.created_at) %> 前
        </p>
      </div>

      <!-- ノート数 -->
      <div class="bg-blue-50 p-4 rounded-xl shadow-sm text-center">
        <p class="text-sm text-gray-600">作成したノート数</p>
        <p class="text-3xl font-bold text-blue-500">
          <%= current_user.notes.count %>
        </p>
      </div>

      <!-- 編集ボタン -->
      <div class="text-center">
        <%= link_to "プロフィールを編集", edit_profile_path,
          class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-full shadow-lg transition ease-in-out duration-300 hover:scale-105" %>
      </div>
    </div>

    <!-- 右カラム: グラフエリア -->
    <div class="card bg-white shadow-xl rounded-2xl p-8" data-controller="notes-chart">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-bold text-blue-700">ノート作成の推移</h2>
        <div class="tabs tabs-bordered">
          <a class="tab tab-active" data-action="click->notes-chart#switch" data-range="day">日</a>
          <a class="tab" data-action="click->notes-chart#switch" data-range="week">週</a>
          <a class="tab" data-action="click->notes-chart#switch" data-range="month">月</a>
          <a class="tab" data-action="click->notes-chart#switch" data-range="year">年</a>
        </div>
      </div>

      <%= tag.canvas(
        nil,
        data: { 
          controller: "notes-chart",
          daily_labels:   @notes_daily.keys.map   { |d| d.strftime('%m/%d') },
          daily_data:     @notes_daily.values,
          weekly_labels:  @notes_weekly.keys.map  { |d| d.strftime('%m/%d') },
          weekly_data:    @notes_weekly.values,
          monthly_labels: @notes_monthly.keys.map { |d| d.strftime('%Y/%m') },
          monthly_data:   @notes_monthly.values,
          yearly_labels:  @notes_yearly.keys.map  { |d| d.strftime('%Y') },
          yearly_data:    @notes_yearly.values
          },
        class: "w-full h-64"
      ) %>
    </div>
  </div>
</div>
