<div class="bg-blue-400 border-y-2" data-controller="dropdown">
  <nav class="navbar w-full">
    <div class="container mx-auto flex justify-between items-center p-4">
      <h1 class="text-2xl font-bold text-white"><%= link_to "見習いノート", root_path %></h1>

      <div class="relative">
        <div class="flex items-center space-x-4">
          <% if user_signed_in? %>
            <span class="text-white font-bold"><%= link_to "ノートを作成", new_note_path %></span>
          <% end %>
        <!-- トリガー -->
        <button class="w-16 h-16 rounded-full" data-action="click->dropdown#toggle">
          <%= image_tag "default_avatar.jpg" %>
        </button>

        <!-- ドロップダウンメニュー -->
        <div data-dropdown-target="menu" class="hidden absolute right-4 top-12 mt-4 w-48 text-center bg-white rounded-md shadow-lg">
          <ul>
          <% if user_signed_in? %>
              <li><%= link_to current_user.name, profile_path, class: "text-gray-600 font-bold hover:text-gray-400" %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-red-600 font-bold" %></li>
          <% else %>
              <li><%= link_to "新規登録", new_user_registration_path, class: "text-gray-700 hover:text-gray-400" %></li>
              <li><%= link_to "ログイン", new_user_session_path, class: "text-blue-600 font-bold hover:text-blue-600" %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</div>