<div class="bg-white rounded-xl shadow-lg p-6"
     data-controller="calendar"
     data-calendar-note-dates-value="<%= note_dates.to_json %>">

  <!-- ヘッダー（月年表示 + 前月/翌月ボタン） -->
  <div class="flex items-center justify-between mb-6">
    <button data-action="click->calendar#previousMonth"
            class="btn btn-sm btn-circle btn-ghost">
      <i class="fas fa-chevron-left"></i>
    </button>

    <h3 class="text-xl font-bold text-gray-800"
        data-calendar-target="monthYear">
      <!-- JavaScript で更新 -->
    </h3>

    <button data-action="click->calendar#nextMonth"
            class="btn btn-sm btn-circle btn-ghost">
      <i class="fas fa-chevron-right"></i>
    </button>
  </div>

  <!-- 曜日ヘッダー -->
  <div class="grid grid-cols-7 gap-1 mb-2">
    <% %w[日 月 火 水 木 金 土].each do |day| %>
      <div class="text-center text-sm font-semibold text-gray-600 py-2">
        <%= day %>
      </div>
    <% end %>
  </div>

  <!-- カレンダーグリッド（JavaScript で描画） -->
  <div class="grid grid-cols-7 gap-1" data-calendar-target="calendar">
    <!-- JavaScript で日付セルを動的に追加 -->
  </div>
</div>
