<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">タグ管理</h1>
      <p class="text-gray-600 mt-2"><strong><%= @team.name %></strong> のタグ</p>
    </div>
    <% if current_user.can_create_tags?(@team) %>
      <%= link_to "新しいタグを作成", new_team_tag_path(@team), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded shadow" %>
    <% end %>
  </div>

  <% if @tags.any? %>
    <div class="overflow-x-auto shadow-md rounded-lg">
      <table class="w-full border-collapse bg-white">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">タグ名</th>
            <th class="px-6 py-3 text-center font-semibold text-gray-700">使用ノート数</th>
            <th class="px-6 py-3 text-center font-semibold text-gray-700">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr class="border-b hover:bg-gray-50 transition">
              <td class="px-6 py-4 font-semibold text-gray-800">
                <%= tag.name %>
              </td>
              <td class="px-6 py-4 text-center text-gray-600">
                <%= tag.notes.count %>
              </td>
              <td class="px-6 py-4 text-center space-x-2">
                <% if current_user.can_create_tags?(@team) %>
                  <%= link_to "編集", edit_team_tag_path(@team, tag), class: "text-yellow-500 hover:text-yellow-600 font-semibold" %>
                  <%= link_to "削除", team_tag_path(@team, tag), method: :delete, data: { turbo_confirm: "本当に削除してもよろしいですか？" }, class: "text-red-500 hover:text-red-600 font-semibold" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 text-center">
      <p class="text-gray-600 text-lg mb-4">まだタグがありません</p>
      <% if current_user.can_create_tags?(@team) %>
        <%= link_to "新しいタグを作成する", new_team_tag_path(@team), class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded shadow" %>
      <% end %>
    </div>
  <% end %>

  <%= link_to "チーム詳細へ戻る", team_path(@team), class: "block text-center mt-6 text-blue-500 hover:text-blue-600" %>
</div>
