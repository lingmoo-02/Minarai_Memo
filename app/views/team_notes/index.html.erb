<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">チームノート</h1>
    <p class="text-gray-600 mt-2"><strong><%= @team.name %></strong> のチーム内ノート</p>
  </div>

  <% if @notes.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= render @notes %>
    </div>

    <!-- ページネーション -->
    <div class="mt-8">
      <%= paginate @notes %>
    </div>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 text-center">
      <p class="text-gray-600 text-lg">チーム内にノートがまだありません</p>
    </div>
  <% end %>

  <%= link_to "チーム詳細へ戻る", team_path(@team), class: "block text-center mt-6 text-blue-500 hover:text-blue-600" %>
</div>
