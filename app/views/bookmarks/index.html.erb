<% if flash[:notice] %>
  <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded"><%= flash[:notice] %></div>
<% end %>

<h1 class="text-4xl text-center p-4 font-bold">ブックマーク一覧</h1>

<div class="container mx-auto px-4 mt-8">
  <% if @bookmarked_notes.present? %>
    <!-- スマホ：リスト形式 -->
    <div class="block md:hidden space-y-4 pt-8 pb-8">
      <%= render @bookmarked_notes %>
    </div>

    <!-- PC：グリッド形式 -->
    <div class="hidden md:grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 pt-8 pb-8">
      <%= render @bookmarked_notes %>
    </div>
  <% else %>
    <div class="mb-3 text-center text-gray-600">ブックマークしたノートがありません</div>
  <% end %>
  <%= paginate @bookmarked_notes %>
</div>
