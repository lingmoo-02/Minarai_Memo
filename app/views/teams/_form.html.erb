<div class="bg-white rounded-lg shadow p-6">
  <%= form_with(model: team, local: true) do |form| %>
    <% if team.errors.any? %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h2 class="font-bold mb-2"><%= team.errors.count %> 件のエラーがあります：</h2>
        <ul class="list-disc list-inside text-sm">
          <% team.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- チーム名 -->
    <div class="mb-4">
      <%= form.label :name, "チーム名", class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_field :name, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300", placeholder: "チーム名を入力" %>
    </div>

    <!-- 説明 -->
    <div class="mb-6">
      <%= form.label :description, "説明", class: "block text-gray-700 font-semibold mb-1" %>
      <%= form.text_area :description, rows: 4, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300", placeholder: "チームの説明を入力（任意）" %>
    </div>

    <!-- 送信ボタン -->
    <div class="text-center">
      <%= form.submit team.persisted? ? "更新する" : "チームを作成", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded shadow" %>
    </div>
  <% end %>
</div>
