<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">チーム一覧</h1>
    <%= link_to "新しいチームを作成", new_team_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded shadow" %>
  </div>

  <% if @teams.any? %>
    <div class="overflow-x-auto shadow-md rounded-lg">
      <table class="w-full border-collapse bg-white">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">チーム名</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">説明</th>
            <th class="px-6 py-3 text-center font-semibold text-gray-700">メンバー数</th>
            <th class="px-6 py-3 text-left font-semibold text-gray-700">作成日</th>
            <th class="px-6 py-3 text-center font-semibold text-gray-700">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @teams.each do |team| %>
            <tr class="border-b hover:bg-gray-50 transition">
              <td class="px-6 py-4">
                <%= link_to team.name, team_path(team), class: "text-blue-500 hover:text-blue-600 font-semibold" %>
              </td>
              <td class="px-6 py-4 text-gray-600 truncate">
                <%= team.description&.truncate(30) || "（説明なし）" %>
              </td>
              <td class="px-6 py-4 text-center text-gray-600">
                <%= team.team_memberships.count %>
              </td>
              <td class="px-6 py-4 text-gray-600">
                <%= l team.created_at, format: :short %>
              </td>
              <td class="px-6 py-4 text-center space-x-2">
                <%= link_to "詳細", team_path(team), class: "text-blue-500 hover:text-blue-600 font-semibold" %>
                <%= link_to "編集", edit_team_path(team), class: "text-yellow-500 hover:text-yellow-600 font-semibold" %>
                <%= link_to "削除", team_path(team), method: :delete, data: { turbo_confirm: "本当に削除してもよろしいですか？" }, class: "text-red-500 hover:text-red-600 font-semibold" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- ページネーション -->
    <div class="mt-6">
      <%= paginate @teams %>
    </div>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 text-center">
      <p class="text-gray-600 text-lg mb-4">まだチームがありません</p>
      <%= link_to "新しいチームを作成する", new_team_path, class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded shadow" %>
    </div>
  <% end %>
</div>
