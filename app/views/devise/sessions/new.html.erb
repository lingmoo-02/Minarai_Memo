<div class="max-w-md mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-center mb-6">ログイン</h1>

  <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
    <% if flash[:alert] %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h3 class="font-bold mb-2">エラー：</h3>
        <p class="text-sm"><%= flash[:alert] %></p>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <!-- パスワード -->
    <div class="mb-4">
      <%= f.label :password, "パスワード", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <!-- ログイン状態保持 -->
    <div class="flex items-center justify-between mb-6">
      <% if devise_mapping.rememberable? %>
        <div class="justify-items-end flex items-center">
          <%= f.check_box :remember_me, id: "remember_me", class: "mr-2" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "パスワードを忘れた場合はこちら", new_password_path(resource_name), class: "justify-items-end text-sm text-gray-700" %>
      <% end %>
    </div>

    <!-- ログインボタン -->
    <div class="text-center mb-6">
      <%= f.submit "ログイン", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded shadow" %>
    </div>

    <div class="divider text-xs">または</div>

    <%- if devise_mapping.registerable? && controller_name != 'registrations'  %>
      <%= link_to new_registration_path(resource_name), class: "relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-primary rounded-lg group bg-gradient-to-tl from-primary to-cyan-500 hover:bg-base200 hover:text-primary dark:text-neutral w-full" do %>
        <span class="relative flex items-center justify-center w-full py-2.5 transition-all ease-in duration-75 bg-white dark:bg-base-200 rounded-md group-hover:bg-base-200 dark:group-hover:bg-base-300">
          <span class="whitespace-nowrap">アカウントを作成</span>
        </span>
      <% end %>
    <% end %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>
