<div class="max-w-md mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold text-center mb-6">新規登録</h2>

  <% if flash[:alert] %>
    <div class="custom-alert">
      <span class="close" onclick="this.parentElement.style.display='none';">&times;</span>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
    <% if resource.errors.any? %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h3 class="font-bold mb-2"><%= resource.errors.count %>件のエラーがあります：</h3>
        <ul class="list-disc list-inside text-sm">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- ユーザー名 -->
    <div class="mb-4">
      <%= f.label :name, "ユーザー名", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :name, autofocus: true, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <!-- メールアドレス -->
    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <!-- パスワード -->
    <div class="mb-4">
      <%= f.label :password, "パスワード（6文字以上）", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <!-- パスワード確認 -->
    <div class="mb-6">
      <%= f.label :password_confirmation, "パスワード確認", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <!-- 登録ボタン -->
    <div class="text-center">
      <%= f.submit "登録する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded shadow" %>
    </div>
  <% end %>

  <!-- ログインのリンク -->
  <div class="mt-6 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
