<div class="max-w-md mx-auto px-4 py-8">
  <div class="max-w-md w-full p-6 rounded shadow">
    <h2 class="text-2xl font-bold text-center mb-6">パスワード再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード", class: "mt-6 block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "mt-6 block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを再設定", class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-bold mt-6 py-2 px-4 rounded shadow" %>
      </div>
    <% end %>
  </div>
</div>
