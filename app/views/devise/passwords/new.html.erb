<div class="max-w-md mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold text-center mb-6">パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <% if resource.errors.any? %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h3 class="font-bold mb-2"><%= resource.errors.count %>件のエラーがあります：</h3>
        <ul class="list-disc list-inside text-sm">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- メールアドレス -->
    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <!-- 送信ボタン -->
    <div class="text-center">
      <%= f.submit "パスワード再設定メールを送信", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded shadow" %>
    </div>
  <% end %>
</div>
