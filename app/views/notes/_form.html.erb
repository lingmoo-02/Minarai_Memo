<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <%= form_with(model: note) do |form| %>
        <% if note.errors.any? %>
          <div style="color: red">
            <h2><%= note.errors.count %> 件のエラーにより、ノートを保存できませんでした</h2>

            <ul>
              <% note.errors.each do |error| %>
                <li><%= error.full_message %>を入力してください</li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :title, "タイトル", style: "display: block" %>
          <%= form.text_field :title %>
        </div>

        <div>
          <%= form.label :body, "本文", style: "display: block", rows: "10" %>
          <%= form.text_field :body %>
        </div>

        <div>
          <%= form.submit "ノートを作成", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>