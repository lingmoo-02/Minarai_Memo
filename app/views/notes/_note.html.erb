<div class="bg-white shadow-md rounded-lg overflow-hidden mb-4">
  <div id="note-id-<%= note.id %>">
    <%= image_tag note.note_image_url, class: "w-full h-48 object-cover" %>
    
    <div class="p-4">
        <div class="d-flex justify-content-between align-items-center">
          <h4 class="card-title mb-0">
            <%= link_to note.title, note %>
          </h4>
          <span class="text-muted">
            <i class="bi bi-calendar"></i>
            <%= l note.created_at, format: :short %>
      <div class="card-body">
        <div class="d-flex">
          <div class='ms-auto'>
            <%= link_to edit_note_path "編集", id: 'button-edit-#{note.id}' do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to '#', id: 'button-delete-#{note.id}', method: :delete, data: {confirm: ''} do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          
          <p class="card-text" style="white-space: pre-wrap; min-height: 5em;">
          <%= simple_format(note.body) %>
          </div>
        </div>
        <ul class="list-inline">
        </ul>
      </div>
    </div>
  </div>
</div>