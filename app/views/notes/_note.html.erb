<!-- スマホ用：リスト形式 -->
<div id="note-id-<%= note.id %>" class="block md:hidden">
  <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
    <div class="flex gap-4 h-24">
      <div class="w-32 h-32 flex-shrink-0">
        <%= link_to note_path(note), class: "block" do %>
          <%= image_tag note.note_image_url, class: "w-full h-24 object-cover" %>
        <% end %>
      </div>

      <div class="p-4 flex-1 flex flex-col">
        <%= link_to note_path(note), class: "block flex-1" do %>
          <h4 class="text-base font-bold mb-2">
            <%= note.title %>
          </h4>

          <div class="text-xs text-gray-600 mb-2">
            <i class="bi bi-calendar"></i>
            <%= l note.created_at, format: :short %>
          </div>

          <% if note.tag.present? %>
            <span class="inline-block bg-blue-100 text-blue-700 text-xs px-2 py-1 rounded">
              <%= note.tag.name %>
            </span>
          <% end %>
        <% end %>
      </div>

      <!-- ブックマークボタン -->
      <div class="flex items-center pr-2">
        <%= render 'bookmarks/button', note: note %>
      </div>
    </div>
  </div>
</div>

<!-- PC用：グリッド形式 -->
<div id="note-id-<%= note.id %>-grid" class="hidden md:block">
  <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow flex flex-col h-full relative">
    <!-- ブックマークボタン -->
    <div class="absolute top-2 right-2 z-10">
      <%= render 'bookmarks/button', note: note %>
    </div>

    <%= link_to note_path(note), class: "block" do %>
      <%= image_tag note.note_image_url, class: "w-full h-48 object-cover" %>

      <div class="p-4 flex flex-col flex-1">
        <div class="flex justify-between items-start mb-2">
          <h4 class="text-lg font-bold">
            <%= note.title %>
          </h4>
          <span class="text-sm text-gray-500 ml-2 flex-shrink-0">
            <i class="bi bi-calendar"></i>
            <%= l note.created_at, format: :short %>
          </span>
        </div>

        <% if note.tag.present? %>
          <div class="mb-2">
            <span class="inline-block bg-blue-100 text-blue-700 text-xs px-2 py-1 rounded">
              <%= note.tag.name %>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>