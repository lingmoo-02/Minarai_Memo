<p style="color: green"><%= notice %></p>

<% content_for :title, "Notes" %>
<div class="container mx-auto pt-10 md:px-0 px-6">
  <h1 class="text-brown font-bold text-2xl md:text-5xl text-center">ノート一覧</h1>

  <div class="flex justify-center mt-6">
    <%= link_to "ノートを作成する", new_note_path, class: "bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600" %>
  </div>

  <div id="notes">
    <% @notes.each do |note| %>
      <%= render note %>
      <p>
        <%= link_to "Show this note", note, class: "text-blue-500 hover:underline" %>
      </p>
    <% end %>
  </div>
</div>
