<% if flash[:notice] %>
  <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded"><%= notice %></div>
<% end %>
<h1 class="text-4xl text-center p-4 font-bold">ノート一覧</h1>

<div class="container mx-auto px-4 mt-8">
  <% if @notes.present? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 pt-8 pb-8">
      <%= render @notes %>
    </div>
  <% else %>
    <div class="mb-3 text-center">ノートがありません</div>
  <% end %>
  <%= paginate @notes %>
</div>
