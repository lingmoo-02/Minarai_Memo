<p style="color: green"><%= notice %></p>

<% content_for :title, "Notes" %>
<div class="container mx-auto pt-10 md:px-0 px-6">
  <h1 class="text-brown font-bold text-2xl md:text-5xl text-center">ノート一覧</h1>

  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @notes.present? %>
          <% render @notes %>
        <% else %>
          <div class="mb-3">ノートがありません</div>
        <% end %>
      </div>
    </div>
  </div>

  <div id="notes">
    <% @notes.each do |note| %>
      <%= render note %>
      <p>
        <%= link_to "Show this note", note, class: "text-blue-500 hover:underline" %>
      </p>
    <% end %>
  </div>
</div>
