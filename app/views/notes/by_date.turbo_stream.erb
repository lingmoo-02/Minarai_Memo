<%= turbo_stream.replace "notes-list" do %>
  <div id="notes-list" class="mt-6 space-y-4">
    <% if @notes.any? %>
      <h4 class="text-lg font-bold text-gray-800 mb-4">
        <%= Date.parse(params[:date]).strftime('%Y年%m月%d日') %> のノート（<%= @notes.count %>件）
      </h4>

      <!-- モバイル：リスト表示 -->
      <div class="block md:hidden space-y-4">
        <%= render partial: 'note', collection: @notes, as: :note %>
      </div>

      <!-- PC：グリッド表示 -->
      <div class="hidden md:grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <%= render partial: 'note', collection: @notes, as: :note %>
      </div>
    <% else %>
      <p class="text-center text-gray-500 py-8">
        この日のノートはありません
      </p>
    <% end %>
  </div>
<% end %>
