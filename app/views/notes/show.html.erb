<%# フラッシュメッセージ（成功通知） %>
<% if notice %>
  <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded"><%= notice %></div>
<% end %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <!-- タイトルと作成日時 -->
    <div class="p-4 border-b flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-800"><%= @note.title %></h1>
      <div class="flex items-center gap-4">
        <%= render 'bookmarks/button', note: @note %>
        <span class="text-sm text-gray-500">
          <i class="bi bi-calendar"></i>
          <%= l @note.created_at, format: :short %>
        </span>
      </div>
    </div>
    <!-- タグ表示 -->
    <% if @note.tag.present? %>
      <div class="p-4 border-b">
        <span class="inline-block bg-blue-100 text-blue-700 text-sm px-3 py-1 rounded">
          <%= @note.tag.name %>
        </span>
      </div>
    <% end %>
    <!-- 画像 -->
    <div class="p-4 flex justify-center">
      <%= image_tag @note.note_image_url, class: "max-w-xs h-auto rounded shadow" %>
    </div>
    <!-- 作業詳細情報 -->
    <% if @note.materials.present? || @note.work_duration.present? || @note.reflection.present? %>
      <div class="px-4 pb-4 border-t pt-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- 使用した資材 -->
          <% if @note.materials.present? %>
            <div>
              <h3 class="text-sm font-semibold text-gray-600 mb-1">使用した資材</h3>
              <p class="text-gray-800"><%= @note.materials %></p>
            </div>
          <% end %>

          <!-- 作業時間 -->
          <% if @note.work_duration.present? %>
            <div>
              <h3 class="text-sm font-semibold text-gray-600 mb-1">作業時間</h3>
              <p class="text-gray-800"><%= @note.work_duration_formatted %></p>
            </div>
          <% end %>

          <!-- 反省点 -->
          <% if @note.reflection.present? %>
            <div>
              <h3 class="text-sm font-semibold text-gray-600 mb-1">反省点</h3>
              <p class="text-gray-800"><%= @note.reflection %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- 操作ボタン -->
  <div class="mt-6 flex justify-center space-x-4">
    <%= link_to "編集する", edit_note_path(@note), class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded shadow" %>
    <%= link_to "一覧へ戻る", notes_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded shadow" %>
    <%= button_to "削除", @note, method: :delete,
          data: { turbo_confirm: "本当に削除してもよろしいですか？" },
          class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded shadow" %>
  </div>
</div>
